{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "simple-import-sort", "unused-imports"],
  "ignorePatterns": ["**/__generated__"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "import/prefer-default-export": "off",
    "react/function-component-definition": "off",
    "react/destructuring-assignment": "off",
    "no-return-assign": "off",
    "no-shadow": "off",
    "react/prop-types": "off",
    "react/jsx-props-no-spreading": "off",
    "react/no-children-prop": "off",
    "react/no-array-index-key": "off",
    "no-nested-ternary": "off",
    "@typescript-eslint/no-shadow": ["error"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }],
    "no-unused-vars": "off",
    "no-console": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/require-default-props": "off",
    "unused-imports/no-unused-imports": "error",
    "consistent-return": "off",
    "no-unused-expressions": "off",
    "react/no-unstable-nested-components": ["error", { "allowAsProps": true }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "overrides": [
    {
      "files": ["./src/**/*.{ts,tsx}"],
      "rules": {
        "simple-import-sort/imports": [
          "error",
          {
            "groups": [
              // Packages. `react` related packages come first.
              ["^react", "^@?\\w"],
              // Internal packages.
              ["^(src|appConstants|components|containers|contextProvider|hooks|i18n|pages|utils|__generated__)(/.*|$)"],
              // Other local imports. Put same-folder imports and `.` last.
              ["^\\.\\.(?!/?$)", "^\\.\\./?$", "^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"]
            ]
          }
        ]
      }
    }
  ]
}
